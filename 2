from tkinter import * 
import tkinter
import turtle as t 

window = tkinter.Tk()

def draw_zigzag(length, num_zigs, angle):
    for _ in range(num_zigs):
        t.forward(length)
        t.left(angle)
        t.forward(length)
        t.right(angle)

# Set up the t screen
t.speed(2)  # Set the drawing speed (1 is the slowest, 10 is the fastest)

# Draw a zigzag pattern
draw_zigzag(50, 5, 90)

# Close the t graphics window when clicked
window.mainloop()
